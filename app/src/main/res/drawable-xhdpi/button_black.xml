<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="3dip" android:color="@color/colorAccent" />
            <gradient android:angle="180" android:startColor="@color/colorPrimary" android:endColor="@color/colorPrimary" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <stroke android:width="2dip" android:color="@color/colorPrimaryDark" />
            <gradient android:angle="180" android:startColor="@color/colorAccentPrimaryDark" android:endColor="@color/colorAccentPrimaryDark" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle"  >
            <stroke android:width="1dip" android:color="@color/colorPrimaryDark" />
            <gradient android:angle="90" android:startColor="@color/colorPrimaryDark" android:endColor="@color/colorPrimaryDark" />
        </shape>
    </item>
</selector>